{
	"compilerOptions": {
		"lib": ["DOM", "ES6"],
		"strict": true,
		"module": "ES2020",
		"moduleResolution": "node",
		"declaration": true,
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"target": "ES2020",
		"sourceMap": true,
		"inlineSources": true,
		"rootDir": "./src",
		"outDir": "./dist/esm",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"typeRoots": ["./types", "./node_modules/@types"],
		"resolveJsonModule": true,
		"declarationMap": true,
		"skipLibCheck": true
	}
}
